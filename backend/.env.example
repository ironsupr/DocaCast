# Copy to `.env` and fill values you plan to use

# Frontend embed API
ADOBE_CLIENT_ID=

# Gemini (LLM) for insights and narration scripting
GOOGLE_API_KEY=

# TTS provider selection: edge_tts | hf_dia | pyttsx3 | google | gemini
# - edge_tts is free and recommended for natural voices
# - google uses Google Cloud Text-to-Speech (set GOOGLE_APPLICATION_CREDENTIALS or embed JSON below)
# - gemini uses Google AI Studio's new speech (google-genai); set GEMINI_API_KEY or GOOGLE_API_KEY
TTS_PROVIDER=


# Google Cloud Text-to-Speech (if TTS_PROVIDER=google)
# Path to service account key JSON file. If provided, it will be used to authenticate.
GOOGLE_APPLICATION_CREDENTIALS=
# Optional: Inline JSON credentials (if not using file path). Leave empty to ignore.
GOOGLE_TTS_SERVICE_ACCOUNT_JSON=
# Optional: default voices (see https://cloud.google.com/text-to-speech/docs/voices)
GOOGLE_TTS_VOICE_A=en-US-Neural2-C
GOOGLE_TTS_VOICE_B=en-GB-Neural2-B
GOOGLE_TTS_AUDIO_ENCODING=MP3

# Microsoft Edge TTS (free)
EDGE_TTS_VOICE_A=en-US-GuyNeural
EDGE_TTS_VOICE_B=en-GB-SoniaNeural
EDGE_TTS_VOICE_DEFAULT=en-US-AriaNeural

# Dev server settings
UVICORN_HOST=127.0.0.1
UVICORN_PORT=8001

# Gemini Speech (google-genai)
# If using Gemini speech, set TTS_PROVIDER=gemini and provide API key (GEMINI_API_KEY or GOOGLE_API_KEY)
GEMINI_API_KEY=
GEMINI_TTS_MODEL=gemini-2.5-pro-preview-tts
GEMINI_VOICE_A=Charon
GEMINI_VOICE_B=Puck
